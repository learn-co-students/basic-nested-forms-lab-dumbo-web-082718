<%= form_for @recipe do |f| %>
  <%= f.label :title, 'Title:' %>
  <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ing| %>
    <p>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    </p>
    <p>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %>
    </p>
  <% end %>
  <%= f.submit 'commit'%>
<% end %>
